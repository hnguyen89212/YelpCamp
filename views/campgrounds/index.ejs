<% include ../partials/header %>

<!-- <h4><%= currentUser %></h4> -->

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Sit veniam error quasi. Id, minus dolorum
                ratione eligendi delectus eius, ex cupiditate aut perspiciatis eaque sit aspernatur ut, quas quasi est?
            </p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campsites</h3>
        </div>
    </div>

    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(each) { %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <img src="<%= each.image %>" alt="" class="img-responsive" style="max-width: 100%;">
                <div class="caption">
                    <h4><%= each.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= each._id %>" class="btn btn-primary">More Info here</a>
                </p>
            </div>


        </div>
        <% }); %>
    </div>

</div>

<% include ../partials/footer %>