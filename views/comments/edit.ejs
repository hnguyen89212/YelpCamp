<% include ../partials/header %>



<!-- 
    Here the action and method attributes 
    point to the "/campgrounds" with "POST"
-->
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit comment</h1>
        <div style="width:30%; margin: 35px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-default btn-block btn-primary" type="submit" value="Create">
                </div>
            </form>
            <a href="/campgrounds">Back to List</a>
        </div>
        
    </div>

</div>

<% include ../partials/footer %>